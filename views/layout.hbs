<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/dist/styles.css" rel="stylesheet">
    <title>Connext</title>
</head>

<body class="bg-gray-50">
    <header class="flex justify-between items-center p-4 bg-indigo-600 text-white shadow-md">
        <h1 class="text-2xl font-semibold">Connext</h1>

        <nav class="space-x-6">

            {{#if user}}
            <a href="/" class="text-white hover:text-indigo-200 transition duration-300">Feed</a>
            <a href="/network/{{user.netid}}" class="text-white hover:text-indigo-200 transition duration-300">My
                Network</a>
            <a href="/courses" class="text-white hover:text-indigo-200 transition duration-300">Explore Courses</a>
            <a href="/chat" class="text-white hover:text-indigo-200 transition duration-300">Messages</a>

            <!-- User Dropdown -->
            <a class="relative">
                <button id="userDropdown"
                    class="py-2 px-4 rounded-md bg-indigo-700 text-white hover:text-indigo-200 transition duration-300">
                    {{user.firstName}} 
                </button>
                <div id="dropdownMenu"
                    class="dropdown-content hidden absolute right-0 mt-2 bg-white text-black shadow-lg rounded-md w-48">
                    <a href="/users/{{user.netid}}"
                        class="block px-4 py-2 hover:bg-indigo-200 transition duration-300">My Account</a>
                    <a href="/logout" class="block px-4 py-2 hover:bg-indigo-200 transition duration-300">Logout</a>
                </div>
            </a>
            {{else}}
            <a href="/register">Register</a>
            <a href="/login">Login</a>
            {{/if}}
        </nav>

    </header>
    <script>
        // Dynamically set the user netid
        const userDropdownButton = document.getElementById('userDropdown');
        const dropdownMenu = document.getElementById('dropdownMenu');

        // Toggle the dropdown menu on button click
        userDropdownButton.addEventListener('click', function () {
            dropdownMenu.classList.toggle('hidden');
        });

        // Hide dropdown if clicked outside (optional)
        window.addEventListener('click', function (event) {
            if (!userDropdownButton.contains(event.target)) {
                dropdownMenu.classList.add('hidden');
            }
        });

    </script>
    {{{ body }}}
</body>

</html>