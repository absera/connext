<h1>REGISTER</h1>
<form action="/register" method="post">
    <label for="net-id">Net ID:</label>
    <input type="text" id="first-name" name="net_id" required>
    <br>
    <label for="first-name">First Name:</label>
    <input type="text" id="first-name" name="first_name" required>
    <br>
    <label for="last-name">Last Name:</label>
    <input type="text" id="last-name" name="last_name" required>
    <br>
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" pattern="^[a-zA-Z0-9._%+-]+@nyu.edu" required>
    <small>Enter your net_id email address</small>
    <br>
    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required minlength="8">
    <small>Must be at least 5 characters</small>
    <br>
    <label for="class-year">Class Year:</label>
    <input type="number" id="class-year" name="class_year" min="1900" max="2099" required>
    <br>
    <button type="submit">Submit</button>
</form>

