<main class="flex justify-center items-center min-h-screen bg-gray-50">
  <div class="w-full max-w-4xl p-8 bg-white rounded-lg shadow-lg">

    <h1 class="text-3xl font-semibold text-center text-indigo-600 mb-6">All Courses</h1>

    <div class="mb-6 text-center">
      <a href="/courses/add" class="px-6 py-3 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500">Add Course</a>
    </div>

    {{#if allCourses.length}}
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        {{#each allCourses}}
          <a href="/courses/{{courseNumber}}" class="block p-6 bg-gray-100 rounded-lg shadow-md hover:bg-indigo-50 hover:shadow-xl transition duration-300">
            <div class="font-semibold text-indigo-600">Course Number: <span class="text-gray-800">{{courseNumber}}</span></div>
            <div class="font-semibold text-indigo-600 mt-2">Semester: <span class="text-gray-800">{{semester}}</span></div>
            <div class="font-semibold text-indigo-600 mt-2">Course Name: <span class="text-gray-800">{{courseName}}</span></div>
          </a>
        {{/each}}
      </div>
    {{else}}
      <p class="text-center text-gray-500 mt-6">No courses available.</p>
    {{/if}}

  </div>
</main>