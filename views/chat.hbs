<main class="min-h-screen bg-gray-50 flex flex-col items-center py-6">
  <div class="w-full max-w-lg bg-white rounded-lg shadow-lg p-6">
    <!-- State new conversations section -->
    <div class="mb-6">
      <h2 class="text-xl font-semibold text-gray-800 mb-2">Your Chat Participants</h2>
      <a href="/network/user/{{user.netid}}" class="mt-4 inline-block bg-indigo-600 text-white py-2 px-6 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500">
        + Start New Chat
      </a>
    </div>

    <!-- Chat participants list -->
    <div class="space-y-4">
      {{#if chat_list.length}}
        {{#each chat_list}}
        <a href="/chat/{{netid}}" class="flex items-center justify-between p-4 bg-gray-100 rounded-lg hover:bg-indigo-50 transition-colors duration-200">
          <div class="text-gray-800 text-lg font-medium">
            {{firstName}} {{lastName}}
          </div>
          <div class="text-xs text-gray-400">
            Continue Messaging
          </div>
        </a>
        {{/each}}
      {{else}}
        <p class="text-center text-gray-500">No communications yet</p>
      {{/if}}
    </div>
  </div>
</main>
