<main class="flex justify-center items-center min-h-screen bg-gray-50">
  <div class="w-full max-w-lg p-8 bg-white rounded-lg shadow-lg">
    <h1 class="text-3xl font-semibold text-center text-indigo-600 mb-6">Add a Course</h1>
    <form action="/courses/add" method="post" class="space-y-6">
      <!-- Error Message Notification -->
      {{#if message}}
      <div class="p-4 mb-6 text-center text-red-700 bg-red-50 border border-red-300 rounded-md">
        <h2 class="text-lg font-semibold">{{message}}</h2>
      </div>
      {{/if}}

      <!-- Course Number -->
      <div>
        <label for="course-number" class="block text-gray-700">Course Number</label>
        <input type="text" name="course-number" id="course-number" required
          class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500">
        <small class="text-gray-500">Enter the course number as seen on Albert (e.g., CS-1001)</small>
      </div>

      <!-- Semester -->
      <div>
        <label for="semester" class="block text-gray-700">Semester</label>
        <input type="text" name="semester" id="semester" required
          class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500">
        <small class="text-gray-500">Enter the semester the course is being offered (e.g., Fall 2024)</small>
      </div>

      <!-- Course Name -->
      <div>
        <label for="course-name" class="block text-gray-700">Course Name</label>
        <input type="text" name="course-name" id="course-name" required
          class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500">
        <small class="text-gray-500">Enter the full name of the course (e.g., Introduction to Programming)</small>
      </div>

      <!-- Submit Button -->
      <div class="flex justify-center">
        <button type="submit"
          class="w-full py-3 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500">Add
          Course</button>
      </div>
    </form>
  </div>
</main>